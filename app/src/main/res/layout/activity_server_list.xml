<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF2CA5FF"
    android:orientation="vertical">

    <com.example.test.ui.widget.TitleView
        android:id="@+id/servers_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerTitle="@string/servers"
        app:leftImg="@mipmap/icon_back_arrow" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/servers_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="18.3dp"
        android:layout_marginTop="18.3dp"
        tools:listitem="@layout/servers_list_item_layout" />

</LinearLayout>